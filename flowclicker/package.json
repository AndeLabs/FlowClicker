{
  "name": "flowclicker",
  "private": true,
  "scripts": {
    "build": "pnpm recursive run build",
    "build:client": "pnpm --filter 'client' build",
    "build:contracts": "pnpm --filter 'contracts' build",
    "dev": "mprocs",
    "dev:client": "pnpm --filter 'client' run dev",
    "dev:contracts": "pnpm --filter 'contracts' dev",
    "dev:node": "pnpm --filter 'contracts' run dev:node",
    "foundry:up": "curl -L https://foundry.paradigm.xyz | bash && bash $HOME/.foundry/bin/foundryup",
    "mud:up": "pnpm mud set-version --tag main && pnpm install",
    "prepare": "command -v forge >/dev/null 2>&1 || bash scripts/install-foundry.sh",
    "test": "pnpm recursive run test"
  },
  "devDependencies": {
    "@latticexyz/cli": "2.2.23",
    "@latticexyz/common": "2.2.23",
    "@latticexyz/explorer": "2.2.23",
    "@latticexyz/store-indexer": "2.2.23",
    "@types/debug": "4.1.7",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "eslint": "8.57.0",
    "mprocs": "^0.7.3",
    "shx": "^0.3.4",
    "typescript": "5.4.2"
  },
  "engines": {
    "node": "^20 || ^22",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "@types/react": "^18.3.18",
      "@types/react-dom": "^18.3.5"
    }
  }
}

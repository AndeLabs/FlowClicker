# ANDE Network Configuration
VITE_CHAIN_ID=6174
VITE_RPC_URL=https://rpc.ande.network

# MUD World Address (will be set after deployment)
VITE_WORLD_ADDRESS=

# WalletConnect Project ID (REQUIRED for production)
# Get your FREE project ID at: https://cloud.walletconnect.com/
# This enables connection with 300+ wallets (MetaMask Mobile, Trust, Rainbow, etc.)
VITE_WALLETCONNECT_PROJECT_ID=YOUR_PROJECT_ID_HERE

# MUD Indexer Configuration (REQUIRED for real-time data)
# The indexer syncs blockchain data to PostgreSQL and exposes GraphQL API
# Local development: http://localhost:8080/graphql
# Production: Deploy indexer using `mud indexer` or Quarry for 7ms latency
VITE_INDEXER_URL=http://localhost:8080/graphql
VITE_INDEXER_WS_URL=ws://localhost:8080/graphql

# Optional: Enable dev tools
VITE_ENABLE_DEV_TOOLS=true

# Optional: Analytics
VITE_ANALYTICS_ID=

# Enable hoisting for better performance
hoist=true

# Auto install peers
auto-install-peers=true

# Approve build scripts for known packages
enable-pre-post-scripts=true

# Shamefully hoist (required for Vite builds and some dependencies)
shamefully-hoist=true

# Public hoist pattern for React and other common dependencies
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*@types/react*

# Store directory
store-dir=~/.pnpm-store
